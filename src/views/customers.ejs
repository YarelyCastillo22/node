<%- include("partials/_cuerpo") %>


<div class="container">
    <div class="row mt-5">
        <div class="col-md-7.3">
            <table class="table" color="#CF99E8">
                <thead class="thead-dark">
                    <tr>
                        <th><font color="#CF99E8">NÂ°</th>
                        <th><font color="#CF99E8">Name</th>
                        <th><font color="#CF99E8">Adress</th>
                        <th><font color="#CF99E8">Phone</th>
                        <th><font color="#CF99E8">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data){ %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><font color="#431381"><%= (i + 1) %></td>
                                <td><font color="#431381" face="Cursive"><%= data[i].name %></td>
                                <td><font color="#431381"><%= data[i].adress %></td>
                                <td><font color="#431381"><%= data[i].phone %></td>
                                
                                <style>
                                    .btn-outline-danger {
                                        padding: 15px;
                                        margin-right: 3px;
                                    }
                                    .btn-outline-info {
                                        padding: 15px;
                                        margin-left: 3px;
                                    }

                                </style>

                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-outline-danger">Delete</a>

                                    <a href="/update/<%= data[i].id %>" class="btn btn-outline-info">Update</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card border-info mb-3" >
                <div class="card-body text-info">

                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="adress" placeholder="Adress" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" placeholder="Phone" class="form-control">
                        </div>
                        <style>
                            .btn-primary{ 
                                color: #CF99E8;  
                            }
                            
                        </style>

                        <button type="submit" class="btn btn-primary">
                            Save Customer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

